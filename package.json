{
  "publisher": "YRM",
  "name": "starter-templates",
  "displayName": "Starter Templates",
  "version": "0.1.0",
  "description": "Create a project quickly and easily in VSCode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yrming/vscode-starter-templates"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "workspaceContains:starterTemplates.create",
    "onUri"
  ],
  "contributes": {
    "commands": [
      {
        "command": "starterTemplates.createProject",
        "title": "New Project",
        "category": "Starter Templates"
      }
    ],
    "configuration": [
      {
        "title": "Create Vue(Official)",
        "order": 1,
        "properties": {
          "starterTemplates.createVue.needsTypeScript": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add TypeScript?",
            "scope": "window"
          },
          "starterTemplates.createVue.needsJsx": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add JSX Support?",
            "scope": "window"
          },
          "starterTemplates.createVue.needsRouter": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add Vue Router for Single Page Application development?",
            "scope": "window"
          },
          "starterTemplates.createVue.needsPinia": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add Pinia for state management?",
            "scope": "window"
          },
          "starterTemplates.createVue.needsVitest": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add Vitest for Unit Testing?",
            "scope": "window"
          },
          "starterTemplates.createVue.endToEndTestingSolution": {
            "enum": [
              "Cypress",
              "Nightwatch",
              "Playwright",
              "No"
            ],
            "default": "Cypress",
            "description": "Add an End-to-End Testing Solution?",
            "scope": "window"
          },
          "starterTemplates.createVue.needsEslint": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add ESLint for code quality?",
            "scope": "window"
          },
          "starterTemplates.createVue.needsPrettier": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Add Prettier for code formatting?",
            "scope": "window"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "format": "eslint . --fix",
    "test": "vscode-test"
  },
  "dependencies": {
    "@types/degit": "^2.8.6",
    "degit": "^2.8.4",
    "execa": "^8.0.1",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
